{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "role": {
      "type": ["string", "null"]
    },
    "task": {
      "type": ["string", "null"]
    },
    "summary": {
      "type": ["string", "null"]
    },
    "findings": {
      "type": ["string", "null"]
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_steps": {
      "type": ["string", "null"]
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": ["string", "null"] },
          "title": { "type": ["string", "null"] },
          "url": { "type": ["string", "null"] }
        },
        "required": ["id", "title"]
      }
    }
  },
  "required": ["role", "task", "summary"],
  "additionalProperties": false
}
