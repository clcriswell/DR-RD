{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Planner V1",
  "type": "object",
  "properties": {
    "plan_id": {"type": "string"},
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "summary": {"type": "string"}
        },
        "required": ["id", "title", "summary"],
        "additionalProperties": false
      }
    },
    "constraints": {"type": "string"},
    "assumptions": {"type": "string"},
    "metrics": {"type": "string"},
    "next_steps": {"type": "string"}
  },
  "required": ["plan_id", "tasks"],
  "additionalProperties": false
}
