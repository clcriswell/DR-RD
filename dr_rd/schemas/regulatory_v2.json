{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "role": {
      "type": "string"
    },
    "task": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "findings": {
      "type": "string"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "title"
        ]
      }
    }
  },
  "required": [
    "role",
    "task",
    "summary",
    "findings",
    "risks",
    "next_steps",
    "sources"
  ],
  "additionalProperties": false
}
